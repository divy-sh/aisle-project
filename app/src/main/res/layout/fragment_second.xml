<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/getOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroy_sb"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/enter_your_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Enter The\nOTP"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/gilroy_xb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/getOTP"
        app:layout_constraintTop_toBottomOf="@id/getOTP" />

    <EditText
        android:id="@+id/otpBox"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        android:textSize="24sp"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/gilroy_sb"
        android:inputType="phone"
        android:textColor="@color/black"
        android:hint="OTP"
        android:maxLength="4"
        app:layout_constraintStart_toStartOf="@id/getOTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/enter_your_otp" />
    <Button
        android:id="@+id/button_second"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_even_more_corner"
        android:stateListAnimator="@null"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="@font/gilroy_xb"
        app:layout_constraintStart_toStartOf="@id/getOTP"
        app:layout_constraintTop_toBottomOf="@id/otpBox" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="00:00"
        android:fontFamily="@font/gilroy_sb"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/button_second"
        app:layout_constraintTop_toBottomOf="@id/otpBox" />

</androidx.constraintlayout.widget.ConstraintLayout>